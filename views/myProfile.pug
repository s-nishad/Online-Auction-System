include ./header
include ./headerSeller
doctype html
head
  meta(charset='UTF-8')
  title My Profile
  meta(content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport')
  link(rel='stylesheet' type='text/css' href='https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css')
  link(rel='stylesheet' href='https://pro.fontawesome.com/releases/v5.10.0/css/all.css')

section.main-content
  .container
    h1.text-center My Profile
    br
    br
    .row
      .col-sm-8.offset-sm-2.col-md-6.offset-md-3.col-lg-4.offset-lg-4
        .profile-card.card.rounded-lg.shadow.p-4.p-xl-5.mb-4.text-center.position-relative.overflow-hidden
          .banner
          img.img-circle.mx-auto.mb-3(src='https://www.w3schools.com/bootstrap4/img_avatar1.png' alt='Card image cap')
          h3.mb-4 #{loggedInUser.fullname}
          .text-left.mb-4
            p.mb-2
              i.fa.fa-envelope.mr-2
              | #{loggedInUser.email}
            p.mb-2
              i.fa.fa-phone.mr-2
              |  #{loggedInUser.phone}
            p.mb-2
              i.fa.fa-user.mr-2
              |  #{loggedInUser.status}
            p.mb-2
              i.fa.fa-map-marker-alt.mr-2
              |  #{loggedInUser.address}
            <br>
            p.mb-2
                if loggedInUser.status == 'Seller'
                    .float-right
                        a.btn.btn-outline-primary.btn-sm(href='/profile/myProduct') My Product
                    a.btn.btn-outline-primary.btn-sm(href='/profile/additem') Add Product
                if loggedInUser.status == 'Buyer'
                    .float-right
                        a.btn.btn-outline-primary.btn-sm(href='/profile') Buy Product
                    a.btn.btn-outline-success.btn-sm(href=`/requestCredit/${loggedInUser._id}`) Request Product



            
script(src='https://code.jquery.com/jquery-3.5.1.slim.min.js')
script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js')
