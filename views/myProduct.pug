include ./headerSeller
doctype html 
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js')
.m-4

  p.text-center(style='font-size: 25px; font-weight: bold') MY PRODUCT

  table.table
    thead.table-dark
      tr
        th Name
        th Details
        th Price 
        th isApproved
        th isSold
    tbody
    each product in items
        tr
            td #{product.name}
            td #{product.detail}
            td #{product.price}
            td
                if product.status == true
                    button.btn.btn-success.btn-sm Approved
                else
                    button.btn.btn-danger.btn-sm Waiting for Approve
            td 
                if product.sold == true
                    a.btn.btn-success(href=`/profile/showbid/${product._id}`) Sold
                else
                    a.btn.btn-danger(href=`/requestRebid/${product._id}`) Request For Rebid
