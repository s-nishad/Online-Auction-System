include ./header

.container
    .row
        .col-md-8(style='position: relative; top: 10px; margin: auto; z-index: 100;')
                    .messages
                            if submited
                                if errors
                                    for error in errors
                                        p(style='padding: 5px 10px; color: red; text-align: center; font-size: 1.25em; background-color: aqua;')= error
                                else if success
                                    p(style='padding: 5px 10px; color: green; font-size: 16px;text-align: center;background-color: aqua;')= success
                    if register
                        form.register(method='post' action='/register')
                            h5(style='text-align: center; margin-top: 10px;') Register
                            .form-group
                                p Full Name
                                input.form-control(type='text' name='fullname')
                            .form-group
                                p Email Address
                                input.form-control(type='email' name='email')
                            .form-group
                                p Country/Address
                                input.form-control(type='text' name='address')
                            .form-group
                                p Phone Number
                                input.form-control(type='text' name='phone')
                            .form-group
                                select.form-control(name='status' required)
                                    option(value='') Account Type:
                                    option(value='Buyer')= 'Buyer'
                                    option(value='Seller')= 'Seller'
                            .form-group
                                p Password
                                input.form-control(type='password' name='password')
                            .form-group
                                p Re Enter Password
                                input.form-control(type='password' name='password2')
                            .form-group
                                input.btn.btn-primary.form-control(type='submit' value='Submit')
                            .form-group
                            .text-center.fs-6
                            |  Registered ? 
                            a(href='/login') Login Here
                    else if login
                        .messages
                                if(login_errors)
                                    p(style='padding: 5px 10px; color: red; text-align: center; font-size: 1.25em; background-color: aqua;')= login_errors
                        form.login(method='post' action='/login')
                            h5(style='text-align: center; margin-top: 10px;') Login
                            .form-group
                                p Email Address
                                input.form-control(type='email' name='email')
                            .form-group
                                p Password
                                input.form-control(type='password' name='password')

                            .form-group
                                input.btn.btn-primary.form-control(type='submit' value='Submit')
                            p.text-center Or ?
                            a.btn.btn-danger.text-center(href='/register') Register
                            a.btn.btn-success.float-right(href='/profile') Guest View
                            
